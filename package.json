{
  "name": "rpg-mcp-server",
  "version": "1.2.0",
  "description": "LLM-driven RPG game server using MCP protocol",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "rpg-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "claude-desktop-config.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "prepublishOnly": "npm run build",
    "inspector": "./node_modules/.bin/mcp-inspector node dist/index.js",
    "inspector:dev": "tsc && ./node_modules/.bin/mcp-inspector node dist/index.js"
  },
  "dependencies": {
    "@mcp-ui/server": "^5.10.0",
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@modelcontextprotocol/inspector": "^0.16.6",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.1"
  },
  "keywords": [
    "mcp",
    "rpg",
    "game",
    "llm",
    "typescript",
    "claude",
    "ai"
  ],
  "author": "fritzprix <innocentevil0914@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/rpg-mcp-server.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
