{
  "name": "rpg-mcp-server",
  "version": "1.0.5",
  "description": "LLM-driven RPG game server using MCP protocol",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "rpg-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "claude-desktop-config.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "keywords": ["mcp", "rpg", "game", "llm", "typescript", "claude", "ai"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/rpg-mcp-server.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}